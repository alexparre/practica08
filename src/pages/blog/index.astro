---
import '../styles/global.css'; // Importa los estilos aquí
import { getPosts } from '../../utils/api'; // Función para obtener los álbumes.
const albums = await getPosts();
---

<html lang="es">
  <head>
    <title>Alex Store - Álbumes</title>
  </head>
  <body class="bg-gray-100">
    <header class="bg-blue-600 text-white py-6 text-center">
      <h1 class="text-3xl font-bold">Todos los Álbumes</h1>
    </header>
    <main class="container mx-auto px-4 py-8">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {albums.map(album => (
          <a href={`/blog/${album.id}`} class="block bg-white shadow-md rounded-md p-4 hover:shadow-lg">
            <img src={album.coverImage} alt={album.title} class="w-full h-48 object-cover rounded-md" />
            <h3 class="text-xl font-semibold mt-4">{album.title}</h3>
            <p class="text-gray-700 mt-2">{album.artist}</p>
            <p class="text-gray-500 mt-1 font-bold">${album.price.toFixed(2)}</p>
          </a>
        ))}
      </div>
    </main>
  </body>
</html>
